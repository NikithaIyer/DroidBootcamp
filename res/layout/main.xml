<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_operand" android:hint="Enter the first operand"/>
    <Button
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add_button"
            android:background="#54a537"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_operand" android:hint="Enter the second operand"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:onClick="launchResult"
            android:id="@+id/result_button" />

    <TextView android:layout_width="match_parent"
              android:background="#1111ff"
              android:layout_height="50dp"
              android:id="@+id/result"
              android:layout_gravity="center"/>

    <Button android:layout_width="160dp"
            android:layout_height="100dp"
            android:textAllCaps="true"
            android:text="Click to go to new activity"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:background="#FFEE56"
            android:onClick="launchBackAndForth"/>


</LinearLayout>

